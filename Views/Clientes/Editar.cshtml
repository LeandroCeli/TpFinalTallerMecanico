@model TallerMecanico.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Cliente</h2>

    <form asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Dni" class="form-label">DNI</label>
                <input asp-for="Dni" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Apellido" class="form-label">Apellido</label>
                <input asp-for="Apellido" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Telefono" class="form-label">Teléfono</label>
                <input asp-for="Telefono" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Direccion" class="form-label">Dirección</label>
                <input asp-for="Direccion" class="form-control" />
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Actualizar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </form>
</div>
