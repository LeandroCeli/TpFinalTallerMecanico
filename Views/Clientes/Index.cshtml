@model IEnumerable<TallerMecanico.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Clientes</h2>

    <form asp-action="Index" method="get" class="d-flex mb-3">
        <input type="text" name="busqueda" class="form-control me-2" placeholder="Buscar por DNI, nombre o apellido"
            value="@ViewBag.Busqueda">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Limpiar</a>
    </form>

    <a asp-action="Crear" class="btn btn-success mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Cliente
    </a>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>DNI</th>
                <th>Nombre</th>
                <th>Apellido</th>
