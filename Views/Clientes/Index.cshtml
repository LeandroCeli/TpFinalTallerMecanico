@model IEnumerable<TallerMecanico.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Clientes</h2>

    <form asp-action="Index" method="get" class="d-flex mb-3">
        <input type="text" name="busqueda" class="form-control me-2"
               placeholder="Buscar por DNI, nombre o apellido"
               value="@ViewBag.Busqueda" />
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Limpiar</a>
    </form>

    <a asp-action="Crear" class="btn btn-success mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Cliente
    </a>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>DNI</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Tel√©fono</th>
                <th>Email</th>
                <th>Direcci√≥n</th>
                <th style="width: 180px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Dni</td>
                    <td>@item.Nombre</td>
                    <td>@item.Apellido</td>
                    <td>@item.Telefono</td>
                    <td>@item.Email</td>
                    <td>@item.Direccion</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear"></i> Opciones
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="Vehiculos"
                                       asp-action="PorCliente"
                                       asp-route-idCliente="@item.Id">
                                        üöó Ver Veh√≠culos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Editar" asp-route-id="@item.Id">
                                        ‚úèÔ∏è Editar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-danger" asp-action="Eliminar" asp-route-id="@item.Id">
                                        üóëÔ∏è Eliminar
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- ‚úÖ PAGINACI√ìN DEBAJO de la tabla -->
    @if (ViewBag.TotalPaginas > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">

                <!-- Anterior -->
                <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.PaginaActual - 1)"
                       asp-route-busqueda="@ViewBag.Busqueda">
                        ¬´ Anterior
                    </a>
                </li>

                <!-- N√∫meros -->
                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-busqueda="@ViewBag.Busqueda">
                            @i
                        </a>
                    </li>
                }

                <!-- Siguiente -->
                <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(ViewBag.PaginaActual + 1)"
                       asp-route-busqueda="@ViewBag.Busqueda">
                        Siguiente ¬ª
                    </a>
                </li>

            </ul>
        </nav>
    }
</div>
