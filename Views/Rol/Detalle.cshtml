@model TallerMecanico.Models.Rol

@{
    ViewData["Title"] = "Detalles del Rol";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles del Rol</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title">@Model.Nombre</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3">Descripci√≥n</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
