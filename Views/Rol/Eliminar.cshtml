@model TallerMecanico.Models.Rol

@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">
        <i class="bi bi-exclamation-triangle"></i> Confirmar eliminación
    </h2>

    <div class="alert alert-warning">
        <p>¿Está seguro de eliminar el siguiente rol?</p>
        <ul>
            <li><strong>Nombre:</strong> @Model.Nombre</li>
            <li><strong>Descripción:</strong> @Model.Descripcion</li>
        </ul>
    </div>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
