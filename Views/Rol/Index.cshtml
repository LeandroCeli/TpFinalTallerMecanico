@model IEnumerable<TallerMecanico.Models.Rol>

@{
    ViewData["Title"] = "Roles";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Roles</h2>

    <a asp-action="Crear" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Rol
    </a>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th style="width: 220px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rol in Model)
            {
                <tr>
                    <td>@rol.Id</td>
                    <td>@rol.Nombre</td>
                    <td>@rol.Descripcion</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@rol.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Editar" asp-route-id="@rol.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@rol.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
