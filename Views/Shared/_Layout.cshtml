@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var user = HttpContextAccessor.HttpContext?.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
    var nombre = user?.FindFirst("NombreCompleto")?.Value ?? "Invitado";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administracion Automotriz</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Administracion Automotriz </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Perfil">Mi perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Clientes" asp-action="Index">Cliente</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Vehiculos" asp-action="Index">Vehiculo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Servicio" asp-action="ServiciosVue">Servicios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Trabajo" asp-action="TrabajoVue">Trabajo</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled">Reportes</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-light me-2">Hola, @nombre</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Usuarios" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Cerrar sesión</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3 mt-5">
        <small>&copy; @DateTime.Now.Year - Administracion Automotriz</small>
    </footer>

    <!-- ✅ Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toastSuccess" class="toast text-bg-success border-0" role="alert" aria-live="assertive"
            aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["Mensaje"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <!-- ✅ Sonido mecánico -->
    <audio id="mechanicSound">
        <source src="~/sounds/air_impact.mp3" type="audio/mpeg">
    </audio>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Script activar toast + sonido -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.getElementById('toastSuccess');
            var soundEl = document.getElementById('mechanicSound');

            if (toastEl && toastEl.innerText.trim() !== "") {
                var toast = new bootstrap.Toast(toastEl);
                toast.show();

                // 🔊 Sonido aire / pistola neumática
                if (soundEl) {
                    soundEl.volume = 0.35;
                    soundEl.play().catch(() => { });
                }
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>

</html>