@model TallerMecanico.Models.Trabajo

<div class="container mt-4">
    <h2><i class="bi bi-trash"></i> Eliminar Trabajo</h2>

    <div class="alert alert-danger mt-3">
        <h5>¿Estás seguro que deseas eliminar este trabajo?</h5>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Vehículo</dt>
        <dd class="col-sm-9">@($"{Model.Vehiculo?.Patente} - {Model.Vehiculo?.Marca} {Model.Vehiculo?.Modelo}")</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.Estado</dd>
    </dl>

    <form asp-action="EliminarConfirmado" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="bi bi-trash3"></i> Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
    </form>
</div>
