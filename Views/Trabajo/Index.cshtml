@model IEnumerable<TallerMecanico.Models.Trabajo>

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-wrench-adjustable"></i> Lista de Trabajos</h2>

    <a asp-action="Crear" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Nuevo Trabajo
    </a>

    <table class="table table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Vehículo</th>
                <th>Descripción</th>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Costo Total</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@($"{t.Vehiculo?.Patente} - {t.Vehiculo?.Marca} {t.Vehiculo?.Modelo}")</td>
                    <td>@t.Descripcion</td>
                    <td>@t.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@(t.FechaFin.HasValue ? t.FechaFin.Value.ToString("dd/MM/yyyy") : "-")</td>
                    <td>$@t.CostoTotal.ToString("N2")</td>
                    <td>@t.Estado</td>
                    <td>
                        <a asp-action="Detalles" asp-route-id="@t.Id" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                        <a asp-action="Editar" asp-route-id="@t.Id" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                        <a asp-action="Eliminar" asp-route-id="@t.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
