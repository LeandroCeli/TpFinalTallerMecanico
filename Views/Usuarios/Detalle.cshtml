@model TallerMecanico.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-4">
    <h2 class="mb-4">Detalles del Usuario</h2>

    <div class="card shadow-sm">
        <div class="card-body d-flex align-items-center">
            <div class="me-4">
                @if (!string.IsNullOrEmpty(Model.Avatar))
                {
                    <img src="@Model.Avatar" alt="Avatar" width="100" height="100" class="rounded-circle border" />
                }
                else
                {
                    <i class="bi bi-person-circle fs-1 text-secondary"></i>
                }
            </div>

            <div>
                <h4>@Model.Nombre @Model.Apellido</h4>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Rol:</strong> @Model.Rol?.Nombre</p>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </div>
</div>
