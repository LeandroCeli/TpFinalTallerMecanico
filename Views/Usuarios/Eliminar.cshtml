@model TallerMecanico.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">
        <i class="bi bi-exclamation-triangle"></i> Confirmar eliminación
    </h2>

    <div class="alert alert-warning">
        <p>¿Está seguro de eliminar el siguiente usuario?</p>
        <ul>
            <li><strong>Nombre:</strong> @Model.Nombre @Model.Apellido</li>
            <li><strong>Email:</strong> @Model.Email</li>
            <li><strong>Rol:</strong> @Model.Rol?.Nombre</li>
        </ul>
    </div>

    <form asp-action="Eliminar" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="bi bi-trash"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>
