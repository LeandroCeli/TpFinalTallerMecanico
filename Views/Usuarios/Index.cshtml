@model IEnumerable<TallerMecanico.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Usuarios</h2>

    <a asp-action="Crear" class="btn btn-primary mb-3">
        <i class="bi bi-person-plus"></i> Nuevo Usuario
    </a>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Avatar</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Rol</th>
                <th style="width: 240px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(u.Avatar))
                        {
                            <img src="@u.Avatar" alt="Avatar" width="50" height="50" class="rounded-circle" />
                        }
                        else
                        {
                            <i class="bi bi-person-circle fs-3 text-secondary"></i>
                        }
                    </td>
                    <td>@u.Nombre</td>
                    <td>@u.Apellido</td>
                    <td>@u.Email</td>
                    <td>@u.Rol?.Nombre</td>
                    <td>
                        <a asp-action="Detalle" asp-route-id="@u.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Editar" asp-route-id="@u.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@u.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
