
@model IEnumerable<TallerMecanico.Models.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<div class="container mt-4">
    <h2 class="mb-4">Listado de Vehículos</h2>

    <a asp-action="Crear" class="btn btn-primary mb-3">
        <i class="bi bi-car-front"></i> Nuevo Vehículo
    </a>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Patente</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Año</th>
                <th>Color</th>
                <th>Cliente</th>
                <th style="width: 220px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Patente</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Año</td>
                    <td>@item.Color</td>
                    <td>@($"{item.Cliente?.Nombre} {item.Cliente?.Apellido}")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
