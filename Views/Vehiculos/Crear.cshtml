                    </select>
                    <span asp-validation-for="Marca" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label">Modelo</label>
                    <input asp-for="Modelo" class="form-control" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label">AÃ±o</label>
                    <input asp-for="Anio" type="number" class="form-control" />
                    <span asp-validation-for="Anio" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Color</label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Kilometraje</label>
                    <input asp-for="Kilometraje" type="number" class="form-control" placeholder="Ej: 75000" />
                    <span asp-validation-for="Kilometraje" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Tipo de VehÃ­culo</label>
                    <select asp-for="Tipo" class="form-select">
                        <option value="">Seleccione...</option>
                        <option>Personal</option>
                        <option>Trabajo</option>
                        <option>Otro</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success me-2">
