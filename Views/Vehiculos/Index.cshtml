@model IEnumerable<TallerMecanico.Models.Vehiculo>

@{
    ViewData["Title"] = "Vehículos";
}

<div class="container mt-4">

    <form asp-action="Index" method="get" class="d-flex mb-3">
        <input type="text" name="busqueda" class="form-control me-2"
            placeholder="Buscar por Dominiio, Marca , Modelo, Color, apellido. nombre" value="@ViewBag.Busqueda">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Buscar
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Limpiar</a>
    </form>

    <h2 class="mb-4">Listado de Vehículos</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Patente</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Año</th>
                <th>Color</th>
                <th>Cliente</th>
                <th style="width: 220px;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Patente</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Anio</td>
                    <td>@item.Color</td>
                    <td>@($"{item.Cliente?.Nombre} {item.Cliente?.Apellido}")</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                                data-bs-toggle="dropdown">
                                <i class="bi bi-gear"></i> Opciones
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Vehiculos" asp-action="Historial"
                                        asp-route-id="@item.Id">
                                        <i class="bi bi-clock-history"></i> Historial / Trabajos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Editar" asp-route-id="@item.Id">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Vehiculos" asp-action="Crear"
                                        asp-route-clienteId="@item.ClienteId" asp-route-origen="Vehiculo">
                                        <i class="bi bi-car-front"></i> Agregar Vehículo
                                    </a>

                                </li>

                                <li>
                                    <a class="dropdown-item text-danger" asp-action="Eliminar" asp-route-id="@item.Id">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.TotalPaginas > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">

                <li class="page-item @(ViewBag.PaginaActual == 1 ? "disabled" : "")">
                    <a class="page-link" asp-route-page="@(ViewBag.PaginaActual - 1)"
                        asp-route-busqueda="@ViewBag.Busqueda">« Anterior</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
                {
                    <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                        <a class="page-link" asp-route-page="@i" asp-route-busqueda="@ViewBag.Busqueda">@i</a>
                    </li>
                }

                <li class="page-item @(ViewBag.PaginaActual == ViewBag.TotalPaginas ? "disabled" : "")">
                    <a class="page-link" asp-route-page="@(ViewBag.PaginaActual + 1)"
                        asp-route-busqueda="@ViewBag.Busqueda">Siguiente »</a>
                </li>

            </ul>
        </nav>
    }


</div>