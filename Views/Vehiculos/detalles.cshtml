@model TallerMecanico.Models.Vehiculo

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<h2 class="mt-3">Detalles del Vehículo</h2>

<div class="card mt-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.Marca @Model.Modelo (@Model.Patente)</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Patente</dt>
            <dd class="col-sm-9">@Model.Patente</dd>

            <dt class="col-sm-3">Marca</dt>
            <dd class="col-sm-9">@Model.Marca</dd>

            <dt class="col-sm-3">Modelo</dt>
            <dd class="col-sm-9">@Model.Modelo</dd>

            <dt class="col-sm-3">Año</dt>
            <dd class="col-sm-9">@Model.Anio</dd>

            <dt class="col-sm-3">Color</dt>
            <dd class="col-sm-9">@Model.Color</dd>

            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@($"{Model.Cliente?.Nombre} {Model.Cliente?.Apellido}")</dd>
        </dl>

        <div class="mt-4">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
